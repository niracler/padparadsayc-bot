# shellcheck shell=sh disable=SC1072 #xsh

. "$(x wsroot)/config"

original_email=$(git config --global user.email)
original_name=$(git config --global user.name)

git config --global user.email  "$PERSONAL_EMAIL"
git config --global user.name   "$PERSONAL_NAME"

ssh-add -D
ssh-add ~/.ssh/id_rsa_niracler

git commit -m "$@"
git push

git config --global user.email  "$original_email"
git config --global user.name   "$original_name"

ssh-add -D
ssh-add ~/.ssh/id_rsa