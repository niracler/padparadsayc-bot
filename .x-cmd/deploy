# shellcheck shell=sh disable=SC1072 #xsh

. "$(x wsroot)/config"

case "$1" in
    local)  python bot.py "$TOKEN"                      ;;
    build)  docker build -t padpar-bot "$(x wsroot)/"   ;;
    start)
        # docker rm -f bot
        docker run -d --restart=always --name=bot  padpar-bot "$TOKEN"
        ;;
    build_start)
        x deploy build
        docker rm -f bot
        x deploy start
        ;;
    *)  echo "Usage: $0 {local|build|start}"            ;;  
esac



